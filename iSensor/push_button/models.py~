from django.db import models

# Create your models here.

class PushButton(models.Model):

    state_choices = ((True, 'Down'),
                     (False, 'Up'))

    state = models.CharField(max_length = 2,
                             state_choices,
                             False)
    push_date = models.DateTimeField()
    realease_date = models.DateTimeField()
    name = models.ForeignKey(ButtonName)

class ButtonName(models.Model):

    name = models.CharField(100)
